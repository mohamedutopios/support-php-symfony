{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h2 class="text-center mb-4">All Posts</h2>
        <table class="table table-striped table-hover text-center">
            <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Category</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.category.name }}</td>
                    <td>{{ post.createdAt|date("Y-m-d H:i") }}</td>
                    <td>
                        <a href="{{ path('post_show', {id: post.id}) }}" class="btn btn-info btn-sm">View</a>
                        <a href="{{ path('post_edit', {id: post.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                        <form method="post" action="{{ path('post_delete', {id: post.id}) }}" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="text-center mt-4">
            <a href="{{ path('post_create') }}" class="btn btn-primary">Create New Post</a>
        </div>
    </div>
{% endblock %}
